<?xml version="1.0"?>
<ruleset name="Custom">

    <exclude-pattern>*/.git/*</exclude-pattern>
    <exclude-pattern>*/vendor/*</exclude-pattern>

    <!-- Enable colors in report -->
    <arg name="colors"/>

    <!-- Add source codes in the report -->
    <arg value="s"/>

    <!-- Load WordPress Coding standards -->
    <rule ref="WordpressVIPMinimum"/>

</ruleset>